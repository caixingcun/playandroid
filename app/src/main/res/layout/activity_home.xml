<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_marginBottom="50.5dp"
        android:layout_height="match_parent">
    </FrameLayout>

    <View
        app:layout_constraintTop_toBottomOf="@id/fl"
        style="@style/style_line_v" />

    <RadioGroup
        android:id="@+id/rg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp" >
        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:text="首页"
            android:gravity="center"
            android:drawableTop="@drawable/tab_first_page_selector"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="体系"
            android:drawableTop="@drawable/tab_tixi_selector"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="导航"
            android:drawableTop="@drawable/tab_guide_selector"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="项目"
            android:gravity="center"
            android:drawableTop="@drawable/tab_project_selector"
            android:layout_height="match_parent" />
        <RadioButton
            android:id="@+id/rb_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的"
            android:gravity="center"
            android:drawableTop="@drawable/tab_mine_selector"
            android:layout_height="match_parent" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>